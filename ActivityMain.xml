<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Garage App"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vehicle Make"
        android:id="@+id/vehicleMake"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editMake"
        android:layout_below="@+id/vehicleMake"
        android:layout_alignLeft="@+id/editModel"
        android:layout_alignStart="@+id/editModel"
        android:layout_alignRight="@+id/editModel"
        android:layout_alignEnd="@+id/editModel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vehicle Model"
        android:id="@+id/vehicleModel"
        android:layout_below="@+id/editMake"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editModel"
        android:layout_below="@+id/vehicleModel"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vehicle Year"
        android:id="@+id/textView2"
        android:layout_below="@+id/editModel"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editYear"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/editModel"
        android:layout_alignStart="@+id/editModel"
        android:layout_alignRight="@+id/editModel"
        android:layout_alignEnd="@+id/editModel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vehicle Info:"
        android:textSize="15sp"
        android:id="@+id/resultLabel"
        android:layout_below="@+id/editYear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Vehicle Info"
        android:id="@+id/changeButton"
        android:onClick="changeVehicleInfo"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/resultLabel"
        android:layout_alignLeft="@+id/editYear"
        android:layout_alignStart="@+id/editYear" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Vehicle"
        android:id="@+id/buttonAdd"
        android:onClick="addNewVehicle"
        android:layout_below="@+id/changeButton"
        android:layout_alignLeft="@+id/changeButton"
        android:layout_alignStart="@+id/changeButton"
        android:layout_alignRight="@+id/changeButton"
        android:layout_alignEnd="@+id/changeButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Vehicles:"
        android:id="@+id/totalLabel"
        android:layout_below="@+id/buttonAdd"
        android:layout_alignLeft="@+id/buttonAdd"
        android:layout_alignStart="@+id/buttonAdd" />

</RelativeLayout>
